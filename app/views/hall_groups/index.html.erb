<% provide(:title, 'All hall groups') %>
<h1>All hall groups</h1>


<ul class="view">
  <% @hall_groups.each_with_index do |hall_group, i| %>
      <li>
        <%= i + 1 %>.
        <%= link_to hall_group.hall.name, '#' %>
        <%= link_to hall_group.group.name, '#' %>
        <% if current_user?(hall_group.group.user) ||current_user.admin? && signed_in? %>
            | <%= link_to "delete", hall_group, method: :delete, data: { confirm: "You sure?" }, title: hall_group.id %>
        <% end %>
      </li>
  <% end %>
</ul>