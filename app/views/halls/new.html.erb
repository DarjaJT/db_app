<% provide(:title, 'Add hall') %>
<h1>Add hall</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @hall do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.submit "Add hall", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>